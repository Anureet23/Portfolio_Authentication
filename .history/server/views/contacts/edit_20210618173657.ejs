<% include ../partials/navbar.ejs %>


<div class="container">
    <div class="row">
        <div class="offset md-3 col-md-6">
        <h1><%= title %></h1>

        <form class="form" method="POST">
        <div class="form-group mb-3">
            <label for="contactnameTextField" class="form-label">Name</label>
            <input type="text" class="form-control" id="contactnameTextField" placeholder="Enter name here" name="contactname" value="<%= contacts.contactname %>" required>
        </div>

        <div class="form-group mb-3">
            <label for="contactnumberTextField" class="form-label">Contact Number</label>
            <input type="text" class="form-control" id="contactnumberTextField" placeholder="Enter number here" name="contactnumber" value="<%= contacts.contactnumber %>" required>
        </div>

        <div class="form-group mb-3">
            <label for="emailaddressTextField" class="form-label">Email Address</label>
            <input type="text" class="form-control" id="emailaddressTextField" placeholder="Enter email address here" name="emailaddress" value="<%= contacts.emailaddress %>" required>
        </div>

        <br>

        <button class="btn btn-primary" type="submit">
            <i class="fas fa-edit"></i> Submit
        </button>
         &nbsp;&nbsp;
         <a href="/contacts-list/delete/<%= contacts._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete</a>
        <a href="/contacts-list" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>

        </form>
    </div>
</div>
</div>
